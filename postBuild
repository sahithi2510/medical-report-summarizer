#!/bin/bash
# Streamlit Cloud postBuild script to install Tesseract OCR

echo "Updating apt-get..."
sudo apt-get update -y

echo "Installing Tesseract OCR and development libraries..."
sudo apt-get install -y tesseract-ocr libtesseract-dev

# Optional: install English language pack explicitly
sudo apt-get install -y tesseract-ocr-eng

echo "Tesseract installation complete!"
